{
  "compilerOptions": {
    "target": "es2016",                                
    "rootDir": "./src",                                  
    "module": "NodeNext",
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",                   
    "outDir": "./dist",
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                     
    "skipLibCheck": true                                 
  }
}